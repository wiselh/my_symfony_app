<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Create Product</title>
</head>
<body>
<h1 style="color: blue">Update Product </h1>
{% if(exist!=0)  %}
<form action="{{ product.id }}" method="post" name="myform" class="form">
    <div class="form-group" style="width: 500px;margin: auto">
        <div class="form-controller">
            <label for="">Name</label>
            <input type="text" name="name" id="" class="form-control" value="{{ product.name }}">
        </div>
        <div class="form-controller">
            <label for="">Price</label>
            <input type="text" name="price" id="" class="form-control" value="{{ product.price }}">
        </div>
        <div class="form-controller">
            <label for="">Description</label>
            <input type="text" name="description" id="" class="form-control" value="{{ product.description }}">
        </div><br>
        <div class="form-controller">
            <input type="submit" name="submit" id="" class="btn btn-success btn-lg" value="Update">
        </div>
    </div>
</form>
{%  else  %}
<h2>No Product found</h2>
{% endif %}

</body>
</html>