<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Create Product</title>
</head>
<body>
<h1 style="color: red">Create Product</h1>
{#Upload Form#}

<div class="form-group" style="width: 500px;margin: auto">

    {#<div>#}
        {#{{ form_label(form.name) }}#}
        {#{{ form_errors(form.name) }}#}
        {#{{ form_widget(form.name) }}#}
    {#</div>#}
    {#<form action="" method="post">#}
    {#<label for="form_name">Name</label>#}
    {#<input type="text" id="form_name" name="form[name]" class="form-control" required="required"/>#}
    {#<label for="form_price">Price</label>#}
    {#<input type="number" id="form_price" name="form[price]" class="form-control" required="required"  />#}
    {#<label for="form_description">Description</label>#}
    {#<textarea name="form[description]" id="form_description" class="form-control" cols="10" rows="10"></textarea>#}
    {#<button id="form_save" name="form[save]" class="btn btn-success" >Add</button>#}
    {#</form>#}
<div style="padding: 10px">
    {{ form_start(form) }}
    <div class="form-controller">
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-controller">
        {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-controller">
        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-controller">
        {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-controller">
        {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-controller">
        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
    </div>
    {{ form_end(form) }}
</div>
</div>

</body>
</html>